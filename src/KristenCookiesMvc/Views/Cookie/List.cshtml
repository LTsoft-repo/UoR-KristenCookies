@using DataModel.Model.Entities;
@{
    ViewData["Title"] = "Cookies";
}

@model CookieListViewModel

<h2>List of Cookies</h2>

<div>
    <form asp-action="Add" asp-controller="Cookie" method="post" class="form-inline">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="sr-only"></label>
            <input asp-for="Name" class="form-control" placeholder="Cookie Name">
        </div>
        <button type="submit" class="btn btn-success">Add</button>
    </form>

</div>

<table class="table">
    <thead>
    <tr>
        <th>Cookie Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cookie in Model.Cookies)
    {
        <tr>
            <td>@cookie.Name</td>
        </tr>
    }
    </tbody>
</table>
